<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="310dp"
        android:layout_height="360dp"
        android:background="#eee">

        <TextView
            android:id="@+id/change_device_conn"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_centerHorizontal="true"
            android:background="#333131"
            android:gravity="center"
            android:text="选择设备进行连接"
            android:textColor="#ffffff"
            android:textSize="15sp" />

        <ImageButton
            android:id="@+id/btn_refresh"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="top|right"
            android:layout_margin="2dp"
            android:background="@drawable/refresh_fab"
            android:elevation="2dp"
            android:src="@drawable/ic_new"
            tools:ignore="RtlHardcoded" />

        <ListView
            android:id="@+id/listview_device"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@+id/btn_dialog_scan_cancle"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/change_device_conn"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:scrollbars="none" />

        <Button
            android:id="@+id/btn_dialog_scan_cancle"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="2dp"
            android:background="#50abf4"
            android:text="取消"
            android:textColor="#ffffff"
            android:textSize="17sp" />
    </RelativeLayout>

</LinearLayout>